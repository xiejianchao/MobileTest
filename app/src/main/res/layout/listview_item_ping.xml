<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_test_type_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="网页测试"
        android:textSize="@dimen/test_list_item_text_size"
        android:textColor="@color/color_test_detail_gray_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        />

    <View
        android:id="@+id/view_line_divider_type"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_test_detail_gray_bg"
        />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tv_net_title"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="网络"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_target_title"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="目标"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_send_count_title"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="发送/次"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_receive_title"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="接收/次"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_success_rate_title"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="成功率"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_delay_title"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="时延/ms"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            />

    </LinearLayout>

    <View
        android:id="@+id/line_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_test_detail_gray_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tv_net"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="淘宝"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_send_count"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_receive_count"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_success_rate"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_delay"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="@dimen/test_list_item_text_size"
            android:textColor="@color/color_test_detail_gray_bg"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            />

    </LinearLayout>

</LinearLayout>