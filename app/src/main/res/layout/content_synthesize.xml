<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/test_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.huhuo.mobiletest.ui.activity.SynthesizeActivity"
    tools:showIn="@layout/activity_synthesize">

    <TextView
        android:id="@+id/tv_ping_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Ping测试开始..."
        android:layout_margin="10dp"
        android:textColor="@color/color_white"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_synthesize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scrollbars="vertical"
        android:fadingEdge="none"
        android:layout_below="@id/tv_ping_info"
        android:visibility="visible"
        />

</RelativeLayout>
