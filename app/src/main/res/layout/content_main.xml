<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/test_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.huhuo.mobiletest.ui.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/guide_higth"
        android:background="@color/color_white" >

        <RelativeLayout
            android:id="@+id/layout_one_key_test"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_one_key_test"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_one_key_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:text="@string/test_type_one_key_test"
                android:textColor="#82858b"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_task_test"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_task_test"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_task_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:text="@string/test_type_task_test"
                android:textColor="#82858b"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_test_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_test_result"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_test_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:text="@string/test_type_test_result"
                android:textColor="#82858b"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_test_stat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_test_stat"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_test_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:text="@string/test_type_test_stat"
                android:textColor="#82858b"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_error_report"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="5dp"
                android:text="@string/test_type_report"
                android:textColor="#82858b"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp"  />
        </RelativeLayout>

    </LinearLayout>




</LinearLayout>
